<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="laptop1" class="spring.mvc.model.Laptop">
        <property name="name" value="XPS 13"></property>
        <property name="brand" value="Dell"></property>
        <property name="price" value="1200"></property>
        <property name="color" value="silver"></property>
        <property name="weight" value="1.2"></property>
    </bean>

    <bean id="laptop2" class="spring.mvc.model.Laptop">
        <property name="name" value="Envy 13"></property>
        <property name="brand" value="HP"></property>
        <property name="price" value="1100"></property>
        <property name="color" value="White"></property>
        <property name="weight" value="1.1"></property>
    </bean>
</beans>